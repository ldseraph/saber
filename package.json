{
  "name": "saber-theme-tailsaw",
  "version": "1.0.2",
  "license": "MIT",
  "author": {
    "email": "hi@krmax44.de",
    "name": "krmax44",
    "url": "https://krmax44.de"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/saberland/saber-theme-tailsaw.git"
  },
  "description": "A starter template for creating a beautiful, customizable blog in Saber with minimal effort.",
  "keywords": [
    "saber",
    "saber-theme",
    "jigsaw",
    "theme",
    "tailwind",
    "clean",
    "simple",
    "transitions",
    "page-transitions",
    "jekyll"
  ],
  "scripts": {
    "prepublishOnly": "yarn build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d public -t",
    "dev": "saber",
    "build": "saber build",
    "lint": "xo"
  },
  "files": [
    "dist"
  ],
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "import/no-unassigned-import": "off",
      "unicorn/filename-case": "off",
      "no-await-in-loop": "off",
      "unicorn/no-abusive-eslint-disable": "off"
    },
    "ignore": [
      ".saber/**"
    ],
    "envs": [
      "browser"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true
  },
  "dependencies": {
    "fuse.js": "^3.4.5",
    "lodash.debounce": "^4.0.8",
    "moment": "^2.24.0",
    "nprogress": "^0.2.0",
    "postcss-import": "^12.0.1",
    "quasar": "^1.1.0",
    "quasar-framework": "^0.17.20",
    "saber-plugin-critical": "^1.0.2",
    "saber-plugin-prismjs": "^0.2.1",
    "saber-plugin-query-posts": "^0.4.0",
    "saber-plugin-search": "^0.1.0",
    "typeface-nunito-sans": "^0.0.72",
    "vue-moment": "^4.0.0",
    "vuesax": "^3.10.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "autoprefixer": "^9.5.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-rem": "^4.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "gh-pages": "^2.2.0",
    "postcss-nested": "^4.1.2",
    "prismjs": "^1.16.0",
    "saber": "^0.8.1",
    "saber-plugin-critical": "^1.0.2",
    "saber-plugin-prismjs": "^0.2.1",
    "saber-plugin-query-posts": "^0.4.0",
    "sass": "^1.22.12",
    "sass-loader": "^8.0.0",
    "tailwindcss": "^1.1.2",
    "vue-compile": "^0.6.0",
    "xo": "^0.24.0"
  },
  "peerDependencies": {
    "saber": ">=0.8.0"
  }
}
